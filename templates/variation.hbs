<tr id="scenery-row-{{ id }}" data-index="{{ id }}">

  <td class="scenery-name">
    <input type="text" name="variations.{{ id }}.name" value="{{ name }}"
      placeholder="{{localize 'SCENERY.PLACEHOLDER_NEW_VARIATION'}}" data-dtype="String" {{#if isDefault}}disabled{{/if}}>
  </td>

  <td class="scenery-fp">
    <div class="form-fields">
      <input class="image" type="text" value="{{ file }}" name="variations.{{ id }}.file" data-target="variations.{{ id }}.file" data-dtype="String" {{#if isDefault}}readonly{{/if}} />
      <button type="button" title="{{localize 'SCENERY.LABEL_BROWSE_FILES'}}" class="file-picker"
        data-type="imagevideo" data-target="variations.{{ id }}.file" {{#if isDefault}}disabled{{/if}}>
        <i class="fa fa-file-import fa-fw"></i>
      </button>
    </div>
  </td>

  <td class="scenery-gm">
    <input value="{{ id }}" {{#if (eq file @root.gm)}}checked{{/if}} type="radio" name="gm" data-dtype="boolean">
  </td>

  <td class="scenery-player">
    <input value="{{ id }}" {{#if (eq file @root.pl)}}checked{{/if}} type="radio" name="pl" data-dtype="boolean">
  </td>

  <td class="scenery-preview">
    <button class="preview pm-dropdown" type="button" title="{{localize 'SCENERY.LABEL_PREVIEW'}}" data-action="preview"
      {{#if isEmpty}}disabled{{/if}}>
      <i class="fa fa-eye"></i>
    </button>
  </td>

  <td class="scenery-copy">
    <button class="copy" type="button" title="{{localize 'SCENERY.LABEL_COPY'}}" data-action="copy-open" data-variation-index="{{ id }}"
      {{#if isDefault}}disabled{{else}}{{#if isEmpty}}disabled{{/if}}{{/if}}>
      <i class="fa fa-copy"></i>
    </button>
    {{#if sceneDataSummary}}
    <span class="scene-data-summary" title="{{ sceneDataSummary }}">
      <i class="fa fa-info-circle"></i>
    </span>
    {{/if}}
  </td>

  <td class="scenery-reset">
    <button class="reset" type="button" title="{{localize 'SCENERY.LABEL_RESET'}}" data-action="reset-scene-data" data-variation-index="{{ id }}"
      {{#if isDefault}}disabled{{else}}{{#unless hasSceneData}}disabled{{/unless}}{{/if}}>
      <i class="fa fa-undo"></i>
    </button>
  </td>

  <td class="scenery-delete">
    <button class="delete" type="button" title="{{localize 'SCENERY.LABEL_DELETE'}}"
      {{#if isDefault}}disabled{{/if}}>
      <i class="fa fa-trash"></i>
    </button>
  </td>

</tr>
