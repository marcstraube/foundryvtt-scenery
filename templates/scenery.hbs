<div class="form-group">
  <table class="scenery-table" dir="ltr">
    <thead>
      <tr>
        <th scope="col">{{localize 'SCENERY.LABEL_NAME'}}</th>
        <th scope="col">{{localize 'SCENERY.LABEL_FILE'}}</th>
        <th scope="col">{{localize 'SCENERY.LABEL_GM'}}</th>
        <th scope="col">{{localize 'SCENERY.LABEL_PLAYER'}}</th>
        <th scope="col" title="{{localize 'SCENERY.LABEL_PREVIEW'}}"><i class="fa fa-eye"></i></th>
        <th scope="col" title="{{localize 'SCENERY.LABEL_COPY'}}"><i class="fa fa-copy"></i></th>
        <th scope="col" title="{{localize 'SCENERY.LABEL_RESET'}}"><i class="fa fa-undo"></i></th>
        <th scope="col" title="{{localize 'SCENERY.LABEL_DELETE'}}"><i class="fa fa-trash"></i></th>
      </tr>
    </thead>
    <tbody>
      {{#each variations as |v i|}}
      {{> 'modules/scenery/templates/variation.hbs' id=i}}
      {{/each}}
    </tbody>
  </table>
</div>
